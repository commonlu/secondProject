<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gdou.hr_system.mapper.AnnouncementMapper">

    <resultMap id="AnnouncementResultMap" type="com.gdou.hr_system.entity.Announcement">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="level" property="level" />
        <result column="status" property="status" />
        <result column="start_time" property="startTime" />
        <result column="end_time" property="endTime" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 查询当前有效公告：先只检查状态，确保基本功能可用 -->
    <select id="selectActiveAnnouncements" resultMap="AnnouncementResultMap">
        SELECT
            id,
            title,
            content,
            level,
            status,
            start_time,
            end_time,
            create_time
        FROM
            announcements
        WHERE
            status = 1
        ORDER BY
            level DESC,
            create_time DESC
        LIMIT 10
    </select>

</mapper>


